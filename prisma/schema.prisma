generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model RezeptStar {
  id       Int    @id @default(autoincrement())
  rezept   Rezept @relation(fields: [rezeptId], references: [id])
  user     String
  rezeptId Int

  @@unique([rezeptId, user])
}

model Rezept {
  id             Int          @id @default(autoincrement())
  name           String
  description    String?
  header_img     String?
  creator        String
  serving_amount Int          @default(1)
  zutaten        Zutat[]
  steps          RezeptStep[]
  RezeptStar     RezeptStar[]
}

model RezeptStep {
  step_id  Int     @id @default(autoincrement())
  text     String
  Rezept   Rezept? @relation(fields: [rezeptId], references: [id])
  rezeptId Int?
}

model Zutat {
  id       Int     @id @default(autoincrement())
  name     String
  type     String?
  amount   String?
  Rezept   Rezept? @relation(fields: [rezeptId], references: [id])
  rezeptId Int?
}
