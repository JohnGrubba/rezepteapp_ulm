generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model RezeptStar {
  id       Int    @id @default(autoincrement())
  rezept   Rezept @relation(fields: [rezeptId], references: [id])
  user     String
  rezeptId Int    @unique
}

model Rezept {
  id          Int          @id @default(autoincrement())
  name        String
  description String?
  header_img  String?
  rating      Float?
  creator     String
  zutaten     Zutat[]
  steps       RezeptStep[]
  RezeptStar  RezeptStar[]
}

model RezeptStep {
  step_id  Int     @id @default(autoincrement())
  text     String
  Rezept   Rezept? @relation(fields: [rezeptId], references: [id])
  rezeptId Int?
}

model Zutat {
  name     String  @id
  type     String?
  amount   String?
  Rezept   Rezept? @relation(fields: [rezeptId], references: [id])
  rezeptId Int?
}
